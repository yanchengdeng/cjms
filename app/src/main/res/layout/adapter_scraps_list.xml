<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:padding="@dimen/dp_10"
    android:background="@drawable/trans_black_board_bg"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
  >



        <TextView
            android:id="@+id/tvRecordId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="WWWWWWWWWW"
            android:textSize="@dimen/title_size"
            android:textColor="@color/blue_162BA2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRecordDate"
        app:layout_constraintTop_toTopOf="@+id/tvRecordId"
        app:layout_constraintBottom_toBottomOf="@+id/tvRecordId"
        app:layout_constraintRight_toRightOf="parent"
        android:text="2022/12/12 19:32:21"
        android:textSize="@dimen/small_size"
        android:textColor="@color/black_5A5A6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvLine"
        app:layout_constraintTop_toBottomOf="@+id/tvRecordId"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/blue_162BA2"
        app:layout_constraintBottom_toTopOf="@+id/tvRemarkContent"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="@dimen/line_height"/>


    <TextView
        android:id="@+id/tvRemarkContent"
        app:layout_constraintTop_toBottomOf="@+id/tvLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="二维码失败"
        android:textSize="@dimen/small_size"
        android:textColor="@color/black_5A5A6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvRemarkId"
        app:layout_constraintTop_toTopOf="@+id/tvRemarkContent"
        app:layout_constraintBottom_toBottomOf="@+id/tvRemarkContent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="w23423424234"
        android:textSize="@dimen/small_size"
        android:textColor="@color/black_5A5A6E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>



