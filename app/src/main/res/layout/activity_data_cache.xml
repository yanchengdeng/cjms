<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DataCacheActivity">

    <include
        android:id="@+id/commonTitle"
        layout="@layout/common_title_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvUpdateTitle"
        app:layout_constraintTop_toBottomOf="@+id/commonTitle"
        android:text="@string/tip_last_upate_time"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/normal_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp_16"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvUpdateDate"
        app:layout_constraintTop_toTopOf="@+id/tvUpdateTitle"
        android:text="2022/3/23 23:32:12"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvUpdateTitle"
        android:textSize="@dimen/normal_size"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black_5A5A6E"
        android:layout_margin="@dimen/dp_16"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/tvUpdateContent"
        android:text="1. 对方水电费水电费地方水电费水电费水电费水电发送到发顺丰水电费水电费水电费是发送到发送到费水电费\n2.发生发顺丰胜多负少的是否地方水电费水电费是的"
        android:layout_width="0dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/normal_size"
        android:layout_marginHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdateTitle"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:layout_margin="@dimen/dp_16"
        android:layout_height="wrap_content"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:text="@string/check_update"
        android:layout_width="0dp"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/normal_size"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>